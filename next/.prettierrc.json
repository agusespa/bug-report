{
    "printWidth": 90,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["*.tsx", "*.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json",
                "printWidth": 80
            }
        },
        {
            "files": ["*.md", "LICENSE"],
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        }
    ]
}
